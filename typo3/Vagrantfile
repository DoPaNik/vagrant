# -*- mode: ruby -*-
# vi: set ft=ruby :
$ProjectName = 'TYPO3-Environment'


ENV["LC_ALL"] = "de_DE.UTF-8"
VAGRANTFILE_API_VERSION = "2"
# All Vagrant configuration is done below. The "2" in Vagrant.configure
# configures the configuration version (we support older styles for
# backwards compatibility). Please don't change it unless you know what
# you're doing.
Vagrant.configure(VAGRANTFILE_API_VERSION) do |config|

  config.vm.box = "ubuntu/xenial64"
  config.vm.hostname = "#{$ProjectName}"
  config.vm.network "forwarded_port", guest: 81, host: 8100
  config.vm.network "forwarded_port", guest: 80, host: 8000
  config.vm.network :forwarded_port, guest: 3306, host: 33060
  config.vm.synced_folder "cms", "/var/www/typo3",
    owner: "ubuntu",
    group: "www-data"

  config.vm.provider "virtualbox" do |v|
    v.name = "#{$ProjectName}"
    v.customize ["setextradata", :id, "VBoxInternal2/SharedFoldersEnableSymlinksCreate/v-root", "1"]
    v.memory = 2048
    v.cpus = 2
  end

  config.vm.provision :shell,
    path: "https://raw.githubusercontent.com/dopa0002/vagrant/master/typo3/scripts/ubuntu-swap.sh"
  config.vm.provision :shell,
    path: "https://raw.githubusercontent.com/dopa0002/vagrant/master/typo3/scripts/ubuntu-bootstrap.sh"



end
